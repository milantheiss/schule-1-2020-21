public class Vergleich {
    public static void main(String[] args) {
        System.out.println("Vergleich");

        System.out.print("1. Zahl: ");
        int zahl1 = Tastatur.leseZahl();    //Nimmt erste Zahl entgegen

        System.out.print("2. Zahl: ");
        int zahl2 = Tastatur.leseZahl();    //Nimmt zweite Zahl entgegen


        if (zahl1 > zahl2){                 //Wenn Zahl1 größer ist als Zahl2 dann...
            System.out.println("Größter Wert: " + zahl1);
        }
        else if (zahl2 > zahl1){            //Wenn Zahl2 größer ist als Zahl2 dann...
            System.out.println("Größter Wert: " + zahl2);
        }
        else if (zahl1 == zahl2){           //Wenn Zahl1 und Zahl2 gleich groß sind dann...
            System.out.println("Beide Zahlen gleich groß.");
        }
        else {                              //Wenn keiner der Fälle wahr ist
            System.out.println("Ein Fehler ist aufgetreten.");
        }

        System.out.println("Programmende Vergleich.");
    }
}
